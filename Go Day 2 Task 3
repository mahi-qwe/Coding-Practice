// Create a custom arithmetic packages

ğŸ“ arithmetic/arithmetic.go (package)
package arithmetic
import "errors"

func Add(a, b int) int {
return a + b
}

func Subtract(a, b int) int {
return a - b
}

func Multiply(a, b int) int {
return a * b
}

func Divide(a, b int) (int, error) {
if b == 0 {
return 0, errors.New("cannot divide by zero")
}
return a / b, nil
}

ğŸ“ main.go

package main
import (
"fmt"
"go-project/arithmetic" // go.mod is crucial!
)

func main() {
fmt.Println("Add:", arithmetic.Add(10, 5))
fmt.Println("Subtract:", arithmetic.Subtract(10, 5))
fmt.Println("Multiply:", arithmetic.Multiply(10, 5))
result, err := arithmetic.Divide(10, 0)
if err != nil {
	fmt.Println("Error:", err)
} else {
	fmt.Println("Divide:", result)
}
}
